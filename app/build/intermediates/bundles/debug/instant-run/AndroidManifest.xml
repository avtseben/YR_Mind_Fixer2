<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.alexandertsebenko.yr_mind_fixer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/notebook"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme1" >
        <activity
            android:name="ru.alexandertsebenko.yr_mind_fixer.ui.activity.AllNotesListActivity"
            android:theme="@style/AppTheme1" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.alexandertsebenko.yr_mind_fixer.ui.activity.WriteNoteActivity"
            android:label="@string/title_activity_write_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="ru.alexandertsebenko.yr_mind_fixer.ui.activity.NoteActivity"
            android:label="@string/title_activity_unsorted_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="ru.alexandertsebenko.yr_mind_fixer.ui.activity.EditNoteActivity"
            android:label="@string/title_activity_edit_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>